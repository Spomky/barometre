{%  set remoteUsageColor = {
(constant('Afup\\BarometreBundle\\Enums\\RemoteUsageEnums::AUTRE')):'#4C6EAF',
(constant('Afup\\BarometreBundle\\Enums\\RemoteUsageEnums::ALWAYS')):'#89A54E',
(constant('Afup\\BarometreBundle\\Enums\\RemoteUsageEnums::OFTEN')):'#80699B',
(constant('Afup\\BarometreBundle\\Enums\\RemoteUsageEnums::SOME_TIMES')):'#3D96AE',
(constant('Afup\\BarometreBundle\\Enums\\RemoteUsageEnums::NEVER')):'#DB843D',
}
%}

{% block report_content %}
<table class="highchart status-evolution"
       data-graph-container-before="1"
       data-graph-type="column"
       style="display:none"
       data-graph-datalabels-enabled="1"
       data-graph-datalabels-color="white"
       data-graph-stacking="percent"
>
    <thead>
    <tr>
        <th>Ann√©e</th>
        {% for remoteUsage in results.columns %}
            <th data-graph-stack-group="1"
                data-graph-color="{{ remoteUsageColor[remoteUsage] }}"
            >{{ remoteUsage|enum_label('remote_usage') }}</th>
        {% endfor %}
    </tr>
    </thead>
    <tbody>
    {% for year,yearResults in results.data %}
        <tr>
            <td>{{ year }}</td>
            {% for row in yearResults %}
                <td class="text-right">{{ row }}</td>
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
